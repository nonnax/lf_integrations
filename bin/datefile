#!/usr/bin/env ruby
# frozen_string_literal: true

# Id$ nonnax 2022-02-03 13:42:51 +0800
#  datefile <filetype> or datefile <filetype><ext>
require 'rubytools/file_ext'

type, ext = ARGV

mime={
    'ruby'=>'rb', 
    'python'=>'py', 
    'bash'=>'sh', 
    'crystal'=>'cr', 
}

ext ||= mime[type]

f = []
f << Time.now.strftime('%a-%Y-%m-%d')
f << '.' if ext
f << ext
out_f = f.compact.join

header = type ? "#!/usr/bin/env #{type}" : ''

File.write(out_f.filename_succ, header)  
IO.popen("lf_select #{out_f}")
